{
  "name": "telegram-userinfo-bot",
  "type": "module",
  "version": "1.0.0",
  "packageManager": "pnpm@10.15.1",
  "description": "A Telegram bot that extracts and displays detailed user information from forwarded messages or direct interactions.",
  "author": "wudi <wuchendi96@gmail.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/WuChenDi/telegram-userinfo-bot.git"
  },
  "scripts": {
    "dev": "wrangler dev --ip 0.0.0.0 --port 3000 src/index.ts",
    "deploy": "wrangler deploy --minify",
    "build": "bun build src/index.ts --outdir dist --target browser",
    "clean": "bash ./scripts/clean.sh",
    "cf-typegen": "wrangler types --env-interface CloudflareBindings"
  },
  "dependencies": {
    "grammy": "^1.38.3",
    "hono": "^4.10.3"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20251014.0",
    "@types/node": "^24",
    "wrangler": "^4.45.0"
  }
}
